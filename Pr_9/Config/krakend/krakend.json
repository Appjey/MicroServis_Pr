{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "endpoints": [
        {
            "endpoint": "/v1/documentary",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/v1/documents",
                    "method": "GET",
                    "host": ["http://documents"],
                    "is_collection": true,
                    "mapping": {
                        "collection": "documents"
                    }
                }
            ]
        },
        {
            "endpoint": "/v1/documentary/{id}",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/v1/documents/{id}",
                    "method": "GET",
                    "host": ["http://documents"]
                }
            ]
        },
        {
            "endpoint": "/v2/templates",
            "output_encoding": "no-op",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/v2/templates",
                    "encoding": "no-op",
                    "method": "GET",
                    "host": ["http://templates"],
                    "is_collection": true,
                    "mapping": {
                        "collection": "templates"
                    }
                }
            ]
        },
        {
            "endpoint": "/v2/templates/{id}",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/v2/templates/{id}",
                    "method": "GET",
                    "host": ["http://templates"]
                }
            ]
        },
        {
            "endpoint": "/v1/data",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/v1/documents",
                    "method": "GET",
                    "host": ["http://documents"],
                    "is_collection": true,
                    "mapping": {
                        "collection": "documents"
                    }
                },
                {
                    "url_pattern": "/v2/templates",
                    "method": "GET",
                    "host": ["http://templates"],
                    "is_collection": true,
                    "mapping": {
                        "collection": "templates"
                    }
                }
            ]

        }
    ]
}
















